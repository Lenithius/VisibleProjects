<style id="css1">
    table {
        margin-left: 43%;
        background-color: #f25d5d;
        color: #333;
    }

    img {
        padding-left: 33%;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
        line-height: 1.6;
        margin: 30px;
        margin-left: 50px;
        padding: 0;
        background-color: #6b6be6;
        color: #010404;
    }

    /* Header Styling */
    /*header {
                    background-color: #3863f3;
                    color: whitesmoke;
                    text-align: center;
                    padding-top: 0%;
                    padding: 40px 0;
                    margin-left: 30px;
                    margin-right: 30px;
                }*/

    /* Hobbies List Styling */
    #hobbies-list {
        width: 60%;
        margin: 20px auto;
        padding: 0px;
        list-style-type: square;
    }

        #hobbies-list li {
            background: #74d6ec;
            margin: 5px 0;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0.2px 4px rgba(0, 0, 0, 1);
        }

    /* Button Styling */
    button {
        display: block;
        width: 150px;
        margin: 20px auto;
        padding: 10px;
        background-color: #4076f3;
        color: rgb(25, 24, 24);
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1em;
    }

        button:hover {
            background-color: #5171dc;
        }

    /* Footer Styling */
    footer {
        text-align: right;
        padding: 5px;
        background-color: #6692f7;
        margin-top: 20px;
    }

    .dark-mode {
        background-color: #333;
        color: whitesmoke;
    }

        .dark-mode #hobbies-list li {
            background-color: #333;
            color: whitesmoke;
        }

        .dark-mode table {
            background-color: #333;
            color: whitesmoke;
        }

        .dark-mode footer {
            background-color: #333;
            color: whitesmoke;
        }

        .dark-mode button {
            background-color: #333;
            color: whitesmoke;
        }
</style>

